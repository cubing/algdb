{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "set DEV=1 && tsc -w --preserveWatchOutput | firebase emulators:start --only functions",
    "db:sync": "set DEV=1 && ts-node src/scripts/syncDatabase.ts",
    "generate:schema": "set DEV=1 && ts-node src/scripts/generateSchema.ts",
    "generate:migration": "set DEV=1 && ts-node src/scripts/generateMigration.ts",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.13.1",
    "jomql": "^0.3.8",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "named-placeholders": "^1.1.2",
    "pg": "^8.5.1",
    "pusher": "^4.0.1",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "fs": "0.0.1-security",
    "ts-node": "^9.1.1",
    "tslint": "^5.12.0",
    "typescript": "^4.1.3"
  },
  "private": true
}
